<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="30sp"
        android:background="#fa000000"
        android:textColor="@color/materialGray600"
        android:text="Game of thrones - Season 01 Episode 01 - The Red Wedding"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <LinearLayout
        android:background="#fa000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginBottom="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/sound_off"/>

            <SeekBar
                android:thumb="@drawable/custom_seek_bar_thumb_"
                android:max="10"
                android:progress="5"
                android:progressDrawable="@drawable/progress_video"
                android:layout_width="150dp"
                android:layout_height="20dp" />


        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <SeekBar
                android:max="100"
                android:progress="50"
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_video" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="40dp"
                    android:padding="8dp"
                    android:src="@drawable/player_previous" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="32dp"
                    android:padding="8dp"
                    android:src="@drawable/play" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/player_next" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:textColor="@color/materialGray600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32:11"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>